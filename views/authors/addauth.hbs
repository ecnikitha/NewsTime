<h3>{{viewTitle}}</h3>
<form action="/authors/add" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{Authors._id}}">
{{#if error}}
    <div class="alert alert-danger">
        <strong>Error!</strong> {{errorMessage}}
    </div>
{{/if}}
<div class="form-group">
<label> AUTHOR NAME </label>
<input type="text" class="form-control" name="name" placeholder="Enter the name of the author" value="{{Authors.author}}">
<div class="text-danger">
{{Author.authorError}}</div>
</div>
<div class="form-group">
<label> AUTHOR USERNAME </label>
<input type="text" class="form-control" name="username" placeholder="Enter the name of the author" value="{{Authors.author}}">
<div class="text-danger">
{{Author.authorError}}</div>
</div>
<div class="form-group">
<label> MAIL ID </label>
<input type="text" class="form-control" name="authorEmail" placeholder="Enter the authors mailid" value="{{Authors.authorEmail}}">
<div class="text-danger">
{{Authors.authorEmailError}}</div>
</div>
<div class="form-group">
<label> PASSWORD</label>
<input type="text" class="form-control" name="password" placeholder="Enter the password" value="{{Authors.password}}">
<div class="text-danger">
{{Authors.passwordError}}</div>
</div>
<div class="form-group">
<button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
<a class="btn btn-secondary" href="/authors/listauth"><i class="fa fa-list-alt"></i> View All</a>
<a class="btn btn-info" href="/controlpanel"><i class="fa fa-list-alt"></i> Back to Portal</a>
</div>
</form>