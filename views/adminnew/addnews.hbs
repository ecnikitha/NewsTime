
<h3>{{viewTitle}}</h3>
<form action="/managenews" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{Adminnews._id}}">
<div class="form-group">
<label> NEWS Heading</label>
<input type="text" class="form-control" name="NewsHeading" placeholder="Enter the headlines" value="{{Adminnews.NewsHeading}}">
<div class="text-danger">
{{Adminnews.NewsHeadingError}}</div>
</div>

<div class="form-group">
<label> CATEGORY </label>
{{!-- <textarea type="text" class="form-control" name="newscategory" placeholder="Enter the category" value="{{Adminnews.newscategory}}"></textarea> --}}
<select name="newscategory" id="newscategory">
    <h1>{{categories}}</h1>
    {{#each categories}}
       <option>{{this}}</option>
    {{/each}}    
</select>
<div class="text-danger">
{{Adminnews.newscategoryError}}</div>
</div>
  <div> 
                <label for="image">Add Feature Image</label> 
                <input type="text" class="form-control" name="imageURL" placeholder="Enter the link for the featured image"/>
  </div> 
<div class="form-group">
<label> BREIF NEWS</label>
<textarea type="text" class="form-control" name="BreifNews" placeholder="Enter the detailed news" value="{{Adminnews.BreifNews}}">
</textarea>
<div class="text-danger">
{{Adminnews.BreifNewsError}}</div>
</div>
<div class="form-group">
<button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
<a class="btn btn-secondary" href="/adminnew/listnew"><i class="fa fa-list-alt"></i> View All</a>
<a class="btn btn-info" href="/controlpanel"><i class="fa fa-list-alt"></i> Back to Portal</a>
</div>
</form>

